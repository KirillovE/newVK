    pod 'SwiftyJSON', '~> 4.0'
    pod 'RealmSwift', '~> 3.5'
    pod 'SwiftKeychainWrapper', '~> 3.0'
    pod 'FirebaseCore', '~> 4.0'
    pod 'FirebaseDatabase', '~> 4.1'
    
end

